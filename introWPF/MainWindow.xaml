<Window x:Class="introWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:introWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Up left" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="Red"/>
        <Button Content="Down left" HorizontalAlignment="Left" VerticalAlignment="Bottom" Foreground="#FF0350EA"/>
        <Button Content="Bottom Right" HorizontalAlignment="Right" VerticalAlignment="Bottom" Foreground="#FF8B16F1"/>
        <Button Content="Up right" HorizontalAlignment="Right" VerticalAlignment="Top" Foreground="#FF2BAB27"/>
    </Grid>
</Window>
