<Window x:Class="_6TTI_Limet_Maxence_Ex1_Act1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_6TTI_Limet_Maxence_Ex1_Act1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Button Content="Button 1" Height="100"></Button>
            <Button Content="Button 2" Height="100"></Button>
        </StackPanel>
        <DockPanel Grid.Column="1">
            <Button DockPanel.Dock="Top" Content="Top" Height="50" ></Button>
            <Button DockPanel.Dock="Bottom" Content="Bottom" Height="50"></Button>
            <Button DockPanel.Dock="Left" Content="Left" ></Button>
            <Button DockPanel.Dock="Right" Content="Rigth"></Button>
            <Button Content="Direction"></Button>
        </DockPanel>
        <WrapPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="bouton 1" Width="100"></Button>
            <Button Content="bouton 2" Width="100"></Button>
            <Button Content="bouton 3" Width="100"></Button>
            <Button Content="Bouton 4" Width="100" Height="75"></Button>
            <Button Content="Bouton 5" Width="100" Height="75"></Button>
            <Button Content="Bouton 6" Width="100" Height="75"></Button>
        </WrapPanel>
        <Canvas Grid.Column="1" Grid.Row="1">
            <Ellipse Height="125" Canvas.Top="50" Canvas.Left="90" Width="125" Fill="Black"/>
            <Ellipse Height="100" Width="100" Canvas.Top="63" Canvas.Left="104" Fill="Yellow"/>
            <Ellipse Height="65" Width="65" Canvas.Top="80" Canvas.Left="120" Fill="Red"/>

        </Canvas>
    </Grid>
</Window>
