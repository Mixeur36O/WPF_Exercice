<Window x:Class="_6TTI_Limet_Maxence_Ex2_Act1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_6TTI_Limet_Maxence_Ex2_Act1"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="280" Background="#FF7D7D7D" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--Première ligne-->
        <TextBlock Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center" Background="White" Width="185" Height="70"/>
        <Button Content="C" Grid.Column="4" Height="60" Width="60" Background="Red" FontWeight="Bold" FontSize="36"/>
        <!--Deuxième ligne-->
        <Button Content="1" Grid.Column="0" Grid.Row="1" Height="60" Width="60" Background="#FF54B1D0" FontWeight="Bold" FontSize="36"/>
        <Button Content="2" Grid.Column="1" Grid.Row="1" Height="60" Width="60" Background="#FF54B1D0" FontWeight="Bold" FontSize="36"/>
        <Button Content="3" Grid.Column="2" Grid.Row="1" Height="60" Width="60" Background="#FF54B1D0" FontWeight="Bold" FontSize="36"/>
        <Button Content="+" Grid.Column="3" Grid.Row="1" Height="60" Width="60" Background="#FF24C824" FontWeight="Bold" FontSize="36"/>
        <!--Troisième ligne-->
        <Button Content="4" Grid.Column="0" Grid.Row="2" Height="60" Width="60" Background="#FF54B1D0" FontWeight="Bold" FontSize="36"/>
        <Button Content="5" Grid.Column="1" Grid.Row="2" Height="60" Width="60" Background="#FF54B1D0" FontWeight="Bold" FontSize="36"/>
        <Button Content="6" Grid.Column="2" Grid.Row="2" Height="60" Width="60" Background="#FF54B1D0" FontWeight="Bold" FontSize="36"/>
        <Button Content="-" Grid.Column="3" Grid.Row="2" Height="60" Width="60" Background="#FF24C824" FontWeight="Bold" FontSize="36"/>
        <!--Quatrième ligne-->
        <Button Content="7" Grid.Column="0" Grid.Row="3" Height="60" Width="60" Background="#FF54B1D0" FontWeight="Bold" FontSize="36"/>
        <Button Content="8" Grid.Column="1" Grid.Row="3" Height="60" Width="60" Background="#FF54B1D0" FontWeight="Bold" FontSize="36"/>
        <Button Content="9" Grid.Column="2" Grid.Row="3" Height="60" Width="60" Background="#FF54B1D0" FontWeight="Bold" FontSize="36"/>
        <Button Content="/" Grid.Column="3" Grid.Row="3" Height="60" Width="60" Background="#FF24C824" FontWeight="Bold" FontSize="36"/>
        <!--Cinquième ligne-->
        <Button Content="," Grid.Column="0" Grid.Row="4" Height="60" Width="60" Background="#FF82E0FF" FontWeight="Bold" FontSize="36"/>
        <Button Content="0" Grid.Column="1" Grid.Row="4" Height="60" Width="60" Background="#FF54B1D0" FontWeight="Bold" FontSize="36"/>
        <Button Content="*" Grid.Column="2" Grid.Row="4" Height="60" Width="60" Background="#FF24C824" FontWeight="Bold" FontSize="36"/>
        <Button Content="=" Grid.Column="3" Grid.Row="4" Height="60" Width="60" Background="#FFF5C20D" FontWeight="Bold" FontSize="36"/>
    </Grid>
</Window>
